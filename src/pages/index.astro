---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import Wizard from '../components/sections/Wizard.astro';
import About from '../components/sections/About.astro';
import Models from '../components/sections/Models.astro';
import Reviews from '../components/sections/Reviews.astro';
import HowWeWork from '../components/sections/HowWeWork.astro';
import CTAFinal from '../components/sections/CTAFinal.astro';
import Footer from '../components/sections/Footer.astro';
import { Image } from 'astro:assets';
import heroBgImage from '../assets/img/salon-ext-CHROME-285XC.jpg';
---

<Layout title="Vinilone - Soluciones de Privacidad y Control Solar">
    <!-- Hero Background Image -->
    <div class="hero-bg" aria-hidden="true">
        <Image src={heroBgImage} alt="" class="hero-bg-image" loading="eager" />
        <div class="hero-bg-overlay"></div>
    </div>

    <div class="hero-layout">
        <Hero />
        <Wizard prefix="hero" />
    </div><!-- /.hero-layout -->

    <main class="flex-1 w-full space-y-5 md:space-y-8 lg:space-y-10">

        <!-- SOBRE NOSOTROS (Vista Dual: Trigger + Expandido) -->
        <About />

        <!-- NUESTROS MODELOS (Carrusel + Overlay Fullscreen) -->
        <Models />

        <!-- SOCIAL PROOF (GOOGLE STYLE) -->
        <Reviews />

        <!-- CÃ“MO TRABAJAMOS -->
        <HowWeWork />

        <!-- CTA FINAL -->
        <CTAFinal />

    </main>

    <!-- FOOTER -->
    <Footer />
</Layout>
